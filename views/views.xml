<odoo>
    <data>
        <!-- explicit list view definition -->
        <!--TREE FORM PLAYER -->
        <record model="ir.ui.view" id="game.player_tree">
            <field name="name">Player</field>
            <field name="model">game.player</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="photo" widget="image"/>
                    <field name="name"/>
                    <field name="level"/>
                    <field name="barcos"/>
                    <field name="islas"/>
                    <field name="archipielagos"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="game.player_form">
            <field name="name">Player</field>
            <field name="model">game.player</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="photo" widget="image"/>
                        <group>
                            <field name="name"/>
                            <field name="level"/>
                            <field name="barcos"/>
                            <field name="islas"/>
                            <field name="archipielagos"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--
        <record model="ir.ui.view" id="game.player_kanban">
            <field name="name">Player</field>
            <field name="model">game.player</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>

                    </templates>
                </kanban>

            </field>
        </record>
        -->

        <!--TREE FORM ARCHIPIELAGO -->
        <record model="ir.ui.view" id="game.archipielago_tree">
            <field name="name">Archipielago</field>
            <field name="model">game.archipielago</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="photo"/>
                    <field name="name"/>
                    <field name="islas"/>
                    <field name="players"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="game.archipielago_form">
            <field name="name">Archipielago</field>
            <field name="model">game.archipielago</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="photo"/>
                            <field name="name"/>
                            <field name="islas"/>
                            <field name="players"/>
                        </group>
                        <notebook>
                            <page string="Players">
                                <field name="players">
                                    <kanban>
                                        <!--list of field to be loaded -->
                                        <field name="id"/> <!-- És important afegir el id per al record.id.value -->
                                        <field name="photo"/>
                                        <field name="name"/>
                                        <field name="level"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_product_vignette">
                                                    <div class="oe_product_desc">
                                                        <h4>
                                                            <a type="edit">
                                                                <field name="name"/>
                                                            </a>
                                                        </h4>
                                                        <p>

                                                        </p>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--TREE FORM BARCO -->
        <record model="ir.ui.view" id="game.barco_tree">
            <field name="name">Barco</field>
            <field name="model">game.barco</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="player"/>
                    <field name="isla"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="game.barco_form">
            <field name="name">Barco</field>
            <field name="model">game.barco</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="player"/>
                            <field name="isla"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--TREE FORM ISLA -->
        <record model="ir.ui.view" id="game.isla_tree">
            <field name="name">Isla</field>
            <field name="model">game.isla</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="photo"/>
                    <field name="name"/>
                    <field name="level"/>
                    <field name="madera"/>
                    <field name="bronce"/>
                    <field name="hierro"/>
                    <field name="plata"/>
                    <field name="oro"/>
                    <field name="adamantium"/>
                    <field name="player"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="game.isla_form">
            <field name="name">Isla</field>
            <field name="model">game.isla</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="photo"/>
                            <field name="name"/>
                            <field name="level"/>
                            <field name="madera"/>
                            <field name="bronce"/>
                            <field name="hierro"/>
                            <field name="plata"/>
                            <field name="oro"/>
                            <field name="adamantium"/>
                            <field name="player"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- actions opening views on models -->
        <!--
            <record model="ir.actions.act_window" id="game.action_window">
              <field name="name">Game window</field>
              <field name="res_model">game.game</field>
